<div class="container">
  <div class="row flexbox">
    <div class="col-xs-12 col-md-8">

      <div id="map" style="width: 90%; height: 300px;"></div>

      <% content_for(:after_js) do %>
        <%= javascript_tag do %>


            var handler = Gmaps.build('Google');
            handler.buildMap({ internal: { id: 'map' } }, function() {
              markers = handler.addMarkers(<%= raw @hash.to_json %>);
              handler.bounds.extendWith(markers);
              if (markers.length == 0) {
                handler.getMap().setZoom(2);
              } else if (markers.length == 1) {
                handler.getMap().setZoom(14);
              }


              handler.fitMapToBounds();
              $('#address').addClass('hidden');

            });
        <% end %>
      <% end %>

    </div>

    <div class="col-xs-12 col-md-4 location">
      <h4>Find your closest delivery point</h4>

      <%= simple_form_for(current_user) do |f| %>
        <%= f.error_notification %>

        <%= f.input :street_address %>
        <%= f.input :city %>

        <%= f.button :submit, class: "btn btn-primary", aria_pressed: "true", value: "Find a delivery point" %>
      <% end %>
    </div>
  </div>
</div>
