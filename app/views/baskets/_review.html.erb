<div class="container text-center" id="basket-review-order">
  <div class="select" >
    <div class="row">
      <div class="col-md-12 ">
        <h2><i class="fa fa-shopping-basket" aria-hidden="true"></i>   Review and update your order</h2>
      </div>
    </div>


    <div class="row ">
      <div class="col-md-8">
        <div class="row">
          <div class="col-md-4 row-cart ">
            <%= image_tag order.basket.size_url, class: "avatar-basket-size" %> &nbsp;&nbsp;<h5><%= order.basket.size.upcase %> BASKET</h5>

          </div>
        </div>
        <div class="row">
          <div class="col-xs-12 col-sm-4">
              <div class="cart-card-basket">
              <%= image_tag order.basket.category_url %>
              </div>
          </div>
          <div class="col-xs-12 col-sm-8">
            <div class="review">
              <h5>WITH <%= order.basket.category.upcase %>, DELIVERED WEEKLY.</h5>
            </div>
          </div>
        </div>
      </div>
    </div>


    <br>
    <hr>


    <div class="row ">
      <div class="col-md-12">
        <div class="row">
          <div class="col-md-4 row-cart ">
            <h5>EXTRAS</h5>
          </div>
        </div>
        <div class="row ">
          <div class="cart-card-extras">
            <ul class="list-inline">
              <% order.extra_orders.each do |extra_order| %>
                <li>
                  <div class="cart-card-container">
                  <%#= render 'extra_orders/badge_counter', extra_order: extra_order %>
                    <div id="qtd-badge-<%= extra_order.extra.id %>" class="badge badge-green"> <%= extra_order.quantity %>
                    </div>
                    <%= image_tag extra_order.extra.photo, class: "review-extras" %>
                    <a class="card-link" href="#" ></a>
                  </div>
                </li>

              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>


    <br>
    <hr>


    <div class="row ">
      <div class="col-md-12">
        <div class="row">
          <div class="col-md-8 row-cart ">
            <h5>YOU ARE BUYING PRODUCTS FROM THESE PRODUCERS:</h5>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">
            <div class="cart-card-producers">
              <ul class="list-inline">
                <% uniq_producers(order.extra_orders).each do |producer| %>
                    <li >
                      <div>
                        <%= cl_image_tag producer.photo.url, class: "avatar" %>
                        <%= producer.name %>
                      </div>
                    </li>
                <% end %>
              </ul>
            </div>
          </div>

        </div>
      </div>
    </div>


    <br>
    <hr>


    <div class="row">
      <div class="col-xs-12 col-sm-4"></div>
      <div class="col-xs-12 col-sm-8">
        <div class="review-total" id="total-button">
          <div class="review-price">
            <h3>TOTAL $123.99</h3>
          </div>

          <div class="review-order" id="submit-order">
            <p>SUBMIT</p>
            <i class="fa fa-lg fa-chevron-circle-right" aria-hidden="true"></i>
          </div>
        </div>
      </div>
    </div>


  </div>
</div>
