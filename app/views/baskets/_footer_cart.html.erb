<%= form_tag('/order', remote: true, method: :get) do %>
  <%= submit_tag "Go to checkout", id: "submit-btn-checkout", class: "hidden" %>
<% end %>


<div class="cart-footer hidden" id="footer-cart">

  <div class="your-basket">
    <i class="fa fa-shopping-basket" aria-hidden="true"></i>
    <h2>YOUR</h2>
    <h2>BASKET</h2>
  </div>


  <div class="horizontal-scroll">
      <%= render 'baskets/mini_card', order: @order %>
  </div>

  <div class="total">
    <div class="price">
      <p>TOTAL<p>
      <h3> <%= humanized_money_with_symbol(@order.basket.price) %> </h3>
    </div>


    <div class="review-order" id="review-footer-button">
      <p>CHECKOUT<p>
      <i class="fa fa-lg fa-chevron-circle-right" aria-hidden="true"></i>
    </div>

  </div>
</div>
